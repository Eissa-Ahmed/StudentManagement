@model StudentManagement.Models.Subject

<div class="container mt-5">
    <h2 class="mb-4">Subject Details</h2>

    <!-- Display Subject Information -->
    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">@Model.Name</h4>
            <p class="card-text"><strong>Teacher:</strong> @Model.Teacher?.Name</p>
        </div>
    </div>

    <!-- Display Students Enrolled in the Subject -->
    <h5 class="mb-3">Enrolled Students</h5>
    <ul class="list-group mb-4">
        @if (Model.Students != null && Model.Students.Any())
        {
            foreach (var student in Model.Students)
            {
                <li class="list-group-item">
                    @student.Name
                </li>
            }
        }
        else
        {
            <li class="list-group-item">No students enrolled in this subject.</li>
        }
    </ul>

    <!-- Back Button -->
    <a href="@Url.Action("Index", "Subject")" class="btn btn-secondary">Back to Subjects List</a>
</div>