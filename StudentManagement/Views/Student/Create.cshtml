@model CreateStudentVM

@{
    ViewData["Title"] = "Create Student";
}

<div class="container mt-5">
    <h2 class="mb-4">Create New Student</h2>

    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        <div class="row">
            <!-- Name Field -->
            <div class="col-md-6 mb-3">
                <label for="Name" class="form-label">Name</label>
                <input type="text" class="form-control" id="Name" name="Name" asp-for="Name" required>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Email Field -->
            <div class="col-md-6 mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" id="Email" name="Email" asp-for="Email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <!-- Date of Birth Field -->
            <div class="col-md-6 mb-3">
                <label for="DateOfBirth" class="form-label">Date of Birth</label>
                <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" asp-for="DateOfBirth">
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <!-- Department Field -->
            <div class="col-md-6 mb-3">
                <label for="DepartmentId" class="form-label">Department</label>
                <select class="form-control" id="DepartmentId" name="DepartmentId" asp-for="DepartmentId" asp-items="ViewBag.Departments" required>
                    <option value="">Select a department</option>
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
        </div>

        <!-- Subjects Multi-select Field -->
        <div class="row">
            <div class="col-md-12 mb-3">
                <label for="Subjects" class="form-label">Select Subjects</label>
                <select multiple class="form-control" id="Subjects" asp-for="SubjectsIds" asp-items="ViewBag.Subjects">
                </select>
                <span asp-validation-for="SubjectsIds" class="text-danger"></span>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Create Student</button>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
